<div class="container">
  <div class="row">
      <h3>会員詳細</h3>
  </div>
  <div class="row">
  	<div class="col-2"></div>
    <div class="col-8">
    	<table class="table-bordered">
    		<tr>
    		  <th>お名前（非公開）</th>
    		  <td><%= @member.last_name %> <%= @member.first_name %></td>
    		</tr>
    		<tr>
    		  <th>お名前（非公開）</th>
    		  <td><%= @member.last_name_kana %> <%= @member.first_name_kana %></td>
    		</tr>
    		<tr>
    		  <th>ニックネーム（公開されるお名前）</th>
    		  <td><%= @member.nickname %></td>
    		</tr>
    		<tr>
    		  <th>Email</th>
    		  <td><%= @member.email %></td>
    		</tr>
    		<tr>
    		  <th>電話番号</th>
    		  <td><%= @member.phone_number %></td>
    		</tr>
    		<tr>
    		  <th>郵便番号</th>
    		  <td><%= @member.postal_code %></td>
    		</tr>
    		<tr>
    		  <th>住所</th>
    		  <td><%= @member.address %></td>
    		</tr>
            <tr>
              <th>会員ステータス</th>
              <td>
                <%= @member.withdrawal_status %>
                </td>
            </tr>
    	</table>
        <%= link_to "編集", edit_admin_member_path(@member), class:"btn btn-info" %>
        <%= link_to "この会員の注文履歴一覧", admin_orders_path(@member.id), class:"btn btn-info" %>
        <%= link_to "この会員の投稿履歴一覧", admin_posts_path(@member.id), class:"btn btn-info" %>
    </div>
  </div>
</div>