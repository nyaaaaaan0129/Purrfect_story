    <div class="container">
    <div class="row">
      <h3 class="admin_post_show_header">投稿詳細</h3>
    </div>
  <div class="row">
  	<div class="col-1">
  	</div>
    <div class="col-10">
      <div class="post_show_title">
        <h4><%= @post.title %></h4>
      </div>
      <div class="post_show_content">
      	<%= @post.content.html_safe %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10">
      <div class="admin_post_show_button">
        <%= link_to "この投稿を削除する", admin_post_path(@post), method: :delete, class:"btn btn-danger" %>
      </div>
    </div>
    <div class="col-1"></div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10">
      <% @post_comments.each do |post_comment| %>
        <div class="comment_member">
        <%= attachment_image_tag post_comment.member, :image, class:"rounded-circle border",  size: "40x40", fallback: "no_image.jpg" %>
        <%= post_comment.member.nickname %>
        <%= post_comment.created_at.strftime('%Y/%m/%d') %>
        </div>
                <div class="comment_text">
        <%= post_comment.comment %>
        </div>
        <div class="comment_delete_button">
        <%= link_to "削除", public_post_post_comment_path(post_comment, post_comment.post), method: :delete, remote: true, class:"btn btn-danger btn-sm" %>
        </div>
      <% end %>
    </div>
    <div class="col-1"></div>
  </div>
</div>