    <div class="container-fluid">
    <div class="row">
      <h3>投稿一覧</h3>
    </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10">
      <table class="table">
        <thead class="thead-dark">
          <th>タイトル</th>
          <th>投稿者</th>
          <th>投稿ジャンル</th>
          <th>作成日時</th>
          <th>投稿詳細</th>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.member.nickname %></td>
            <td><%= post.post_genre.name %></td>
            <td><%= post.created_at %></td>
            <td><%= link_to "投稿詳細", admin_post_path(post) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-1"></div>

  </div>
</div>