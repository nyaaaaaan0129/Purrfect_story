<!DOCTYPE html>
<html>
  <head>
    <title>PURRFECTStory</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/5c442e0d91.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="wrapper">
    <header class="fixed-top">
        <nav class="navbar navbar-expand-lg">
            <%= link_to root_path, class:"navbar-brand" do %>
            <div class="logo"></div>
            <div class="logo_name"></div>
            <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
              <% if member_signed_in? %>
              <li class="nav-link">ようこそ<%= current_member.nickname %>さん！</li>
              <li class="nav-item">
                <%= link_to "マイページ", public_member_path(current_member.id), class:"nav-link"%>
              </li>
              <li class="nav-item">
                <%= link_to "カート", public_cart_items_path, class:"nav-link"%>
              </li>
              <li class="nav-item">
                <%= link_to "商品一覧", public_items_path, class:"nav-link"%>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                投稿
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                  <%= link_to "投稿一覧", public_posts_path, class:"dropdown-item"%>
                  <%= link_to "いいねした投稿一覧", public_posts_favorite_path, class:"dropdown-item"%>
                  <div class="dropdown-divider"></div>
                  <%= link_to "新規投稿", new_public_post_path, class:"dropdown-item"%>
                </div>
              </li>
                            <li class="nav-item">
                <%= link_to "log_out", destroy_member_session_path, method: :delete, class:"nav-link"%>
              </li>
              <% elsif admin_signed_in?%>
              <%= link_to "投稿一覧", admin_posts_path, class:"nav-link"%>
              <%= link_to "商品一覧", admin_items_path, class:"nav-link"%>
              <%= link_to "会員一覧", admin_members_path, class:"nav-link"%>
              <%= link_to "注文履歴一覧", admin_orders_path, class:"nav-link"%>
              <%= link_to "ジャンル一覧", admin_item_genres_path, class:"nav-link"%>
              <%= link_to "log_out", destroy_admin_session_path, method: :delete, class:"nav-link"%>
              <% else %>
              <li class="nav-item">
                <%= link_to "アバウト", public_public_about_path,  class:"nav-link"%>
              </li>
              <li class="nav-item">
                <%= link_to "投稿一覧", public_posts_path,  class:"nav-link"%>
              </li>
              <li class="nav-item">
                <%= link_to "商品一覧", public_items_path,  class:"nav-link"%>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_member_session_path,  class:"nav-link"%>
              </li>
              
              <% end %>
            </ul>
          </div>
        </nav>
    </header>

    <%= yield %>
  </div>
    <footer>
      <div class="footer_logo"></div>
    </footer>
  </body>
</html>
