    <div class="container-fluid">
      <div class="row">
        <div class="main-visual">
      </div>
    </div>
	<div class="row">
		<div class="col-1"></div>
		<div class="col-8">
		<h3>ショッピングカート</h3>
	  </div>
	  <div class="col-2">
	  	 <div class="destroy_all btn btn-danger">カートを空にする</div>
	  </div>
	  <div class="col-1"></div>
	</div>
  <div class="row">
  	<div class="col-1"></div>
  	<div class="col-10">
	  	<table class="table">
			  <thead class="thead-dark">
			  	<tr>
			  	  <th>商品名</th>
			  	  <th>単価（税込）</th>
			  	  <th>数量</th>
			  	  <th>小計</th>
			  	  <th></th>
			  	</tr>
		      </thead>
		      <tbody>
		      	<% @cart_items.each do |cart_item| %>
		      	<tr>
		      		<td><%= cart_item.item.item_name %></td>
		      		<td><%= (cart_item.item.unit_price_without_tax*1.1).floor %></td>
		      		<td>
		      			<%= form_for cart_item, url: public_cart_item_path(cart_item) do |f| %>
                        <%= f.number_field :number_of_items, min:1, max: 20 %><%= f.submit "更新" ,class:"btn btn-primary btn-xs" %>
                        <% end %>
		      		</td>
		      		<td>
		      			<%= ((cart_item.item.unit_price_without_tax*1.1).floor*cart_item.number_of_items) %>
                        <% @total += ((cart_item.item.unit_price_without_tax*1.1).floor*cart_item.number_of_items) %>
                    </td>
		      	</tr>
		      	<% end %>
		      </tbody>
			</table>
	  </div>
	  <div class="col-1"></div>
  </div>
  <div class="row">
  	<div class="col-1"></div>
  	<div class="col-2">
  		<div class="btn btn-primary">買い物を続ける</div>
  	</div>
  	<div class="col-6"></div>
  	<div class="col-3">
  		<div class="total_price">
  			<div class="total_price_text">合計金額</div>
  			<div class="total_price_price"><%= @total %></div>

  		</div>
  	</div>
  </div>
  <div class="row">
  	<div class="col-12">
  		<div class="cart_next">
    		<div class="btn btn-success">注文情報入力へ進む</div>
    	</div>
  	</div>
  </div>
</div>