    <div class="container-fluid">
      <div class="row">
        <%= render 'public/shared/mainvisual' %>
    </div>
    <%= flash[:notice] %>
  <div class="row">
      <div class="col-3"></div>
      <div class="col-6">
        <h3 class="new_post_header">新着投稿</h3>
      </div>
      <div class="col-3"></div>
    </div>
  <div class="row">
  	<div class="col-3">
  	  <div class="sidebar">
        <%= render "public/shared/sidebar" %>
  	  </div>
  	</div>
  	<div class="col-6">
	      <div class="new_posts">
	      	<% @posts.each do |post| %>
          <%= link_to public_post_path(post), data: {"turbolinks" => false} do %>
	      	<div class="top_new_post">
	      		<div class="post_image">
              <%= attachment_image_tag post, :image, size: "311x270", fallback: "no_image_item.jpg", class:"post_image_tag" %>   
            </div>
	      		<div class="post_title">
	      			<%= post.title %><br>投稿者：<%= attachment_image_tag post.member, :image, class:"rounded-circle border",  size: "40x40", fallback: "no_image.jpg", style:"margin-left:10px" %><%= post.member.nickname %>
	      		</div>
	      	</div>
          <% end %>
            <% end %>
	      </div>
  	</div>
  </div>
</div>


