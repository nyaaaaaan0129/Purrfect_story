    <div class="container-fluid">
      <div class="row">
        <div class="main-visual">
      </div>
    </div>
    <%= flash[:notice] %>
  <div class="row">
  	<div class="col-3">
  	  <div class="sidebar">
        <%= render "public/shared/sidebar" %>
  	  </div>
  	</div>
  	<div class="col-9">
      <h3 class="new_post_header">新着投稿</h3>
	      <div class="new_posts">
	      	<% @posts.each do |post| %>
          <%= link_to public_post_path(post) do %>
	      	<div class="new_post post1">
	      		<div class="post_image">
              <%= attachment_image_tag post, :image, size: "200x150", fallback: "no_image_item.png" %>   
            </div>
	      		<div class="post_title">
	      			<%= post.title %>
	      		</div>
	      	</div>
          <% end %>
            <% end %>
	      </div>
  	</div>
  </div>
</div>
