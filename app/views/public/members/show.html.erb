<div class="container-fluid">
  <div class="row">
    <div class="main-visual">
  </div>
  <div class="row">
    <% if @member == current_member %>
    <h3>マイページ</h3>
    <% else %>
    <h3><%= @member.nickname %>さんの詳細ページ</h3>
    <% end %>
  </div>
    </div>
  <% if @member == current_member %>
  <div class="row">
  	<div class="col-2"></div>
    <div class="col-8">
        <%= attachment_image_tag @member, :image, class:"rounded-circle border",  size: "400x400", fallback: "no_image.jpg" %>
    	<table class="table-bordered">
    		<tr>
    		  <th>お名前（非公開）</th>
    		  <td><%= @member.last_name %> <%= current_member.first_name %></td>
    		</tr>
    		<tr>
    		  <th>お名前（非公開）</th>
    		  <td><%= @member.last_name_kana %> <%= current_member.first_name_kana %></td>
    		</tr>
    		<tr>
    		  <th>ニックネーム（公開されるお名前）</th>
    		  <td><%= @member.nickname %></td>
    		</tr>
            <tr>
                <th>自己紹介</th>
                <td><%= @member.introduction %></td>
            </tr>
    		<tr>
    		  <th>Email</th>
    		  <td><%= @member.email %></td>
    		</tr>
    		<tr>
    		  <th>電話番号</th>
    		  <td><%= @member.phone_number %></td>
    		</tr>
    		<tr>
    		  <th>郵便番号</th>
    		  <td><%= @member.postal_code %></td>
    		</tr>
    		<tr>
    		  <th>住所</th>
    		  <td><%= @member.address %></td>
    		</tr>
    	</table>
    </div>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <%= link_to "注文履歴一覧", public_orders_path, class:"btn btn-primary" %>
        <%= link_to "登録情報を編集する", edit_public_member_path, class:"btn btn-primary" %>
        <% if member_signed_in? && @member.id == current_member.id %>
        <%= link_to "退会する", public_path(current_member), method: :put, "data-confirm" => "本当に退会しますか？", class: "btn btn-outline-danger" %>
        <% end %>
    </div>
  </div>
  <% else %>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <%= attachment_image_tag @member, :image, class:"rounded-circle",  size: "400x400", fallback: "no_image.jpg" %>
        <table class="table-bordered">
            <tr>
              <th>ニックネーム</th>
              <td><%= @member.nickname %></td>
            </tr>
            <tr>
              <th>自己紹介</th>
              <td><%= @member.introduction %></td>
            </tr>
        </table>
    </div>
  </div>
  <% end %>

</div>
