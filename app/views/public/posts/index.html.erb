<div id="loader-bg">
  <div id="loader">
    <%= image_tag "PURRFECT_STORY_loading5.gif", style:"width: 800px; height:400px;" %>
  </div>
</div>

<div id="wrap">
    <div class="container-fluid">
      <div class="row">
        <div class="main-visual">
      </div>
    </div>
    <div class="row">
      <div class="col-3"></div>
      <div class="col-6">
      <h3 class="all_posts_header">投稿一覧</h3>
    </div>
      <div class="col-3"></div>
    </div>
  <div class="row">
  	<div class="col-3">
  	  <div class="sidebar">
        <%= render "public/shared/sidebar" %>
  	  </div>
  	</div>
    <div class="col-8">
      <div class="first_post">
        <%= link_to public_post_path(@post), data: {"turbolinks" => false} do %>
          <div class="first_post_content">
                <div class="first_post_image">
                  <%= attachment_image_tag @post, :image, size: "780x500", fallback: "no_image.jpg", class:"first_post_image_tag" %>
                </div>
                <div class="first_post_title"><h4>
                  <%= @post.title %>
                </h4></div>

                <div class="first_post_user">
                    投稿者：<%= attachment_image_tag @post.member, :image, size: "40x40", fallback: "no_image.jpg", class:"rounded-circle border" %>
                    <%= @post.member.nickname %>
                </div>

          </div>
        <% end %>
        <div class="row">
          <div class="first_post_number_of_favorite">いいね<%= @post.favorites.count %>件</div>
          <div class="first_post_number_of_comments">コメント<%= @post.post_comments.count %>件</div>
        </div>
      </div>
    </div>
    <div class="col-1"></div>
  </div>
  <div class="row">
    <div class="col-3">
      <div class="sidebar">
        <%= render "public/shared/sidebar_favorites" %>
      </div>
      <div class="sidebar">
        <%= render "public/shared/sidebar_post_genre" %>
      </div>
    </div>
    <div class="col-8">
      <div class="all_posts">
        <% @posts.each do |post| %>
        <%= link_to public_post_path(post), data: {"turbolinks" => false} do %>
            <div class="all_posts_box second">
              <div class="all_post_image">
                <%= attachment_image_tag post, :image, size: "370x300", fallback: "no_image.jpg", class:"all_post_image_tag" %>
              </div>
              <div class="all_post_title">
                <h5><%= post.title %></h5>
              </div>
              <% end %>
              <%= link_to public_member_path(post.member_id) do %>
              <div class="first_post_user">
                    投稿者：<%= attachment_image_tag post.member, :image, size: "40x40", fallback: "no_image.jpg", class:"rounded-circle border" %>
                    <%= post.member.nickname %>
                </div>
              <% end %>
              <div class="row">
                <div class="first_post_number_of_favorite">いいね<%= post.favorites.count %>件</div>
                <div class="first_post_number_of_comments">コメント<%= post.post_comments.count %>件</div>
              </div>
            </div>
          <% end %>
      </div>
    </div>
    <div class="col-1"></div>
  </div>
</div>

</div>