    <div class="container-fluid">
      <div class="row">
        <div class="main-visual">
      </div>
    </div>
  <div class="row">
  	<div class="col-3">
  	  <div class="sidebar">
        <%= render "public/shared/sidebar" %>
  	  </div>
  	</div>
    <div class="col-9">
      <h3 class="all_posts_header">投稿一覧</h3>
      <div class="firs_post">
        <%= link_to public_post_path(@post) do %>
          <div class="first_post_content">
                <div class="first_post_image">
                  <%= attachment_image_tag @post, :image, size: "780x500", fallback: "no_image.jpg" %>
                </div>
                <div class="first_post_title"><h4>
                  <%= @post.title %>
                </h4></div>
          </div>
        <% end %>
        <div class="row">
          <div class="first_post_number_of_comments">コメント<%= @post.post_comments.count %>件</div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-9">
      <div class="all_posts">
        <% @posts.each do |post| %>
        <%= link_to public_post_path(post) do %>
            <div class="all_posts_box second">
              <div class="all_post_image">
                <%= attachment_image_tag post, :image, size: "370x300", fallback: "no_image.jpg" %>
              </div>
              <div class="all_post_title">
                <h5><%= post.title %></h5>
              </div>
              <% end %>
              <div class="row">
                <div class="first_post_number_of_comments">コメント<%= post.post_comments.count %>件</div>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>