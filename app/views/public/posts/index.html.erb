
  <div class="row">
  	<div class="col-3">
  	  <div class="sidebar">
        <%= render "public/shared/sidebar" %>
  	  </div>
  	</div>
    <div class="col-9">
      <h3 class="all_posts_header">投稿一覧</h3>
      <div class="first_post">
            <div class="first_post_image"></div>
            <div class="first_post_title"><h4>
              <%= @post.title %>
            </h4></div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-9">
      <div class="all_posts">
        <% @posts.each do |post| %>
          <div class="all_posts_box second">
            <div class="all_post_image"></div>
            <div class="all_post_title">
              <h5><%= post.title %></h5>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
