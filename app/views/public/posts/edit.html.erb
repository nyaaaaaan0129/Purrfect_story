<div class="container-fluid">
  <div class="row">
  	<div class="col-3">
  	  <div class="sidebar">
        <%= render "public/shared/sidebar" %>
  	  </div>
  	</div>
    <div class="col-9">
      <h3>投稿編集</h3>
      <%= form_for(@post, url: '/public/post', html: {method: 'PATCH'}) do |form| %>
      <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  
  <div class="field">
    <%= form.label :content %>
