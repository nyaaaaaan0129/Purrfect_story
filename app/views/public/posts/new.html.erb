    <div class="container-fluid">
      <div class="row">
        <div class="main-visual">
      </div>
    </div>
    <div class="row">
      <div class="col-3"></div>
      <div class="col-6">
      <h3 class="all_posts_header">新規投稿</h3>
    </div>
    <div class="col-3"></div>
    </div>
  <div class="row">
  	<div class="col-3">
  	  <div class="sidebar">
        <%= render "public/shared/sidebar" %>
  	  </div>
  	</div>
    <div class="col-9">
      <%= form_for(@post, url: '/public/posts', html: {method: 'POST'}) do |form| %>
        <div class="field">
          <%= form.label :タイトル %>
          <%= form.text_field :title %>
        </div>
        <div class="field">
          <%= form.label :インデックス画像 %>
          <%= form.attachment_field :image, placeholder: "インデックス画像" %>
        </div>

        <div class="field">
                <%= form.label :投稿ジャンル %>
                <%= form.collection_select :post_genre_id, PostGenre.all, :id, :name %>
        </div>

        <div class="field">
          <%= form.label :content %>
          <%= form.text_area :content, 'data-provider': :summernote, id:"summernote" %>
        </div>
        <div class="actions">
          <%= form.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
    $('#summernote').summernote({
   fontSizes:['8', '9', '10', '11', '12', '13','14', '18', '24', '36'],
  toolbar: [
    // [groupName, [list of button]]
    ['style', ['bold', 'italic', 'underline', 'clear']],
    ['font', ['strikethrough', 'superscript', 'subscript']],
    ['fontsize', ['fontsize']],
    ['color', ['color']],
    ['para', ['ul', 'ol', 'paragraph']],
    ['height', ['height']]
  ]
});
</script>