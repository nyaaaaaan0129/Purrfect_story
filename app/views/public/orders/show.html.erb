<div class="container-fluid">
  <div class="row">
    <div class="main-visual">
  </div>
    </div>
  
  <div class="row">
    <div class="col-3"></div>
  	<div class="col-6">
  		<h3>注文履歴詳細</h3>
  	</div>
    <div class="col-3"></div>
  </div>
  <div class="row">
  	<div class="col-6">
  		<h5>注文情報</h5>
  		<table>
  			<tr>
  				<th>注文日</th>
  				<td><%= @order.created_at %></td>
  			</tr>
  			<tr>
  				<th>配送先</th>
  				<td><%= @order.address %></td>
  			</tr>
  			<tr>
  				<th>支払方法</th>
  				<td><%= @order.payment_method %></td>
  			</tr>
  			<tr>
  				<th>ステータス</th>
  				<td><%= @order.order_status %></td>
  			</tr>
  		</table>
  	</div>
  	<div class="col-6">
  		<h5>請求情報</h5>
  		<table>
  			<tr>
  				<th>商品合計</th>
  				<td><%= @order.total_fee %></td>
  			</tr>
  			<tr>
  				<th>配送量</th>
  				<td><%= @order.postage %></td>
  			</tr>
  			<tr>
  				<th>ご請求額</th>
  				<td><%= (@order.total_fee+@order.postage) %></td>
  			</tr>
  		</table>
  	</div>
  </div>
  <div class="row">
  	<div class="col-6">
  		<h5>注文内容</h5>
  		<table class="table-bordered">
  			<thead>
  				<th>商品</th>
  				<th>単価（税込）</th>
  				<th>個数</th>
  				<th>小計</th>
  			</thead>
  			<tbody>
  			<% @order_items.each do |order_item| %>
  			<tr>
  				<td><%= order_item.item.item_name %></td>
  				<td><%= order_item.items_tax_included_price %></td>
  				<td><%= order_item.number_of_items %></td>
  				<td><%= (order_item.items_tax_included_price*order_item.number_of_items).floor %></td>
  			</tr>
  			<% end %>
  		</tbody>
  		</table>
  	</div>
  </div>
</div>